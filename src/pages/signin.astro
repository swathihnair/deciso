---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.svelte';
---

<Layout title="Sign In - Deciso">
  <Header showAuthButtons={false} client:load />
  
  <main class="min-h-screen flex items-center justify-center px-4 relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 right-20 w-64 h-64 bg-gradient-accent/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 left-20 w-48 h-48 bg-gradient-success/20 rounded-full blur-2xl animate-float" style="animation-delay: -2s;"></div>
    </div>
    
    <div class="max-w-md w-full relative z-10">
      <div class="bg-gradient-card backdrop-blur-md p-8 rounded-3xl border border-white/20 shadow-glass animate-scale-in">
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-gradient-accent rounded-2xl mx-auto mb-4 flex items-center justify-center text-3xl animate-bounce-slow">
            üéØ
          </div>
          <h2 class="text-3xl font-bold text-white mb-2">Welcome Back!</h2>
          <p class="text-white/80">Sign in to continue your journey</p>
        </div>
        
        <form class="space-y-6">
          <div class="animate-slide-up">
            <label for="email" class="block text-sm font-semibold text-white mb-3">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-gradient-card border border-white/20 rounded-2xl text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/40 transition-all duration-300"
              placeholder="Enter your email"
            />
          </div>
          
          <div class="animate-slide-up" style="animation-delay: 0.1s;">
            <label for="password" class="block text-sm font-semibold text-white mb-3">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-4 py-3 bg-gradient-card border border-white/20 rounded-2xl text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/40 transition-all duration-300"
              placeholder="Enter your password"
            />
          </div>
          
          <div class="flex items-center justify-between animate-slide-up" style="animation-delay: 0.2s;">
            <div class="flex items-center">
              <input
                id="remember-me"
                name="remember-me"
                type="checkbox"
                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
              />
              <label for="remember-me" class="ml-2 block text-sm text-white/80">
                Remember me
              </label>
            </div>
            
            <div class="text-sm">
              <a href="#" class="text-white/80 hover:text-white transition-colors font-medium">
                Forgot password?
              </a>
            </div>
          </div>
          
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-2xl font-bold text-lg transition-all duration-300 transform hover:scale-105 animate-slide-up"
            style="animation-delay: 0.3s;"
          >
            Sign In ‚ú®
          </button>
        </form>
        
        <div class="mt-8 text-center animate-fade-in" style="animation-delay: 0.4s;">
          <p class="text-white/80">
            Don't have an account?
            <a href="/signup" class="text-white hover:text-transparent hover:bg-clip-text hover:bg-gradient-accent font-bold transition-all duration-300">
              Sign up here
            </a>
          </p>
        </div>
        
        <!-- Social Login Options -->
        <div class="mt-6 animate-fade-in" style="animation-delay: 0.5s;">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-white/20"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-gradient-card text-white/60">Or continue with</span>
            </div>
          </div>
          
          <div class="mt-6 grid grid-cols-2 gap-3">
            <button class="w-full inline-flex justify-center py-2 px-4 border border-white/20 rounded-xl bg-gray-800 hover:bg-gray-700 text-sm font-medium text-white transition-all duration-300">
              <span class="mr-2">üîç</span>
              Google
            </button>
            <button class="w-full inline-flex justify-center py-2 px-4 border border-white/20 rounded-xl bg-gray-800 hover:bg-gray-700 text-sm font-medium text-white transition-all duration-300">
              <span class="mr-2">üìò</span>
              Facebook
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>